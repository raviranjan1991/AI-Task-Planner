@model IEnumerable<AI_Task_Planner.Models.UserViewModel>

@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="mb-0"><i class="fas fa-users-cog me-2"></i>User Management</h1>
                            <p class="mb-0">Manage users and assign roles</p>
                        </div>
                        <a asp-action="Create" asp-controller="UserManagement" class="btn btn-light">
                            <i class="fas fa-user-plus me-2"></i>Create New User
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-users me-2"></i>Total Users</h5>
                    <h2 class="mb-0">@Model.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-user-shield me-2"></i>Managers</h5>
                    <h2 class="mb-0">@Model.Count(u => u.Role == "Manager")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-user-tie me-2"></i>Team Leads</h5>
                    <h2 class="mb-0">@Model.Count(u => u.Role == "Lead")</h2>
                </div>
            </div>
        </div>
    </div>    <div class="card shadow mb-4">
        <div class="card-header bg-light py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0 text-primary">
                        <i class="fas fa-user-friends me-2"></i>User List
                    </h5>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" id="searchInput" placeholder="Search users..." 
                               oninput="filterTable()">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" 
                                data-bs-toggle="dropdown" aria-expanded="false">Filter</button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#" onclick="filterByRole('all')">All Roles</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#" onclick="filterByRole('Manager')">Managers</a></li>
                            <li><a class="dropdown-item" href="#" onclick="filterByRole('Lead')">Team Leads</a></li>
                            <li><a class="dropdown-item" href="#" onclick="filterByRole('User')">Users</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="usersTable">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                            <th>@Html.DisplayNameFor(model => model.LastName)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Role)</th>
                            <th>@Html.DisplayNameFor(model => model.Created)</th>
                            <th>@Html.DisplayNameFor(model => model.LastActive)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="user-row" data-role="@item.Role" data-name="@(item.FirstName.ToLower() + " " + item.LastName.ToLower())" data-email="@item.Email.ToLower()">
                                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>
                                    <span class="badge bg-@(item.Role == "Manager" ? "danger" : item.Role == "Lead" ? "warning" : "info") text-white">
                                        @Html.DisplayFor(modelItem => item.Role)
                                    </span>
                                </td>
                                <td>@item.Created.ToString("MMM d, yyyy")</td>
                                <td>@(item.LastActive.HasValue ? item.LastActive.Value.ToString("MMM d, yyyy") : "Never")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Edit User">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete User">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light">
            <span class="text-muted">Total: @Model.Count() users</span>
        </div>
    </div>

    @section Scripts {
        <script>
            function filterTable() {
                const input = document.getElementById('searchInput');
                const filter = input.value.toLowerCase();
                const rows = document.getElementsByClassName('user-row');
                
                for (let i = 0; i < rows.length; i++) {
                    const name = rows[i].getAttribute('data-name');
                    const email = rows[i].getAttribute('data-email');
                    
                    if (name.includes(filter) || email.includes(filter)) {
                        rows[i].style.display = '';
                    } else {
                        rows[i].style.display = 'none';
                    }
                }
            }
            
            function filterByRole(role) {
                const rows = document.getElementsByClassName('user-row');
                
                for (let i = 0; i < rows.length; i++) {
                    if (role === 'all' || rows[i].getAttribute('data-role') === role) {
                        rows[i].style.display = '';
                    } else {
                        rows[i].style.display = 'none';
                    }
                }
            }
        </script>
    }
</div>
