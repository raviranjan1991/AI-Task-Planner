@model AI_Task_Planner.Models.TaskTimeLog

@{
    ViewData["Title"] = "Delete Time Log";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Delete Time Log</h4>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this time log?
        </div>
        
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Task</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Task.Title)</dd>
                            
                            <dt class="col-sm-4">User</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.User.UserName)</dd>
                            
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Start Time</dt>
                            <dd class="col-sm-8">@Model.StartTime.ToString("MMM d, yyyy h:mm tt")</dd>
                            
                            <dt class="col-sm-4">End Time</dt>
                            <dd class="col-sm-8">
                                @if (Model.EndTime.HasValue)
                                {
                                    @Model.EndTime.Value.ToString("MMM d, yyyy h:mm tt")
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">In progress</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Duration</dt>
                            <dd class="col-sm-8">
                                @if (Model.DurationMinutes < 60)
                                {
                                    <span>@Model.DurationMinutes minutes</span>
                                }
                                else
                                {
                                    <span>@(Model.DurationMinutes / 60) hours @(Model.DurationMinutes % 60) minutes</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="LogId" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Confirm Delete
            </button>
            <a asp-action="ForTask" asp-route-id="@Model.TaskId" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>
