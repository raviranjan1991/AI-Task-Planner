@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Access Denied</h2>
                </div>
                <div class="card-body text-center">
                    <p class="lead">You do not have permission to access the requested resource.</p>
                    <p>Please contact your administrator if you believe this is a mistake.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
