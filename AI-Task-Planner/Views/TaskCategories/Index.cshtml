@model IEnumerable<AI_Task_Planner.Models.TaskCategory>

@{
    ViewData["Title"] = "Task Categories";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-md-6">
            <h1>Task Categories</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>No categories found. Click "Create New Category" to add your first category.</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-light">
                <div class="row">
                    <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.Name)</div>
                    <div class="col-md-5 fw-bold">@Html.DisplayNameFor(model => model.Description)</div>
                    <div class="col-md-3 fw-bold">Actions</div>
                </div>
            </div>
            <div class="card-body p-0">
                @foreach (var item in Model)
                {
                    <div class="row border-bottom p-3">
                        <div class="col-md-4">
                            <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                        </div>
                        <div class="col-md-5">
                            @Html.DisplayFor(modelItem => item.Description)
                        </div>
                        <div class="col-md-3">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-info" title="Details">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
