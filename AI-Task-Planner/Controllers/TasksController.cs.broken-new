            // Get categories for dropdown
            ViewBag.Categories = new SelectList(await _context.TaskCategories.OrderBy(c => c.Name).ToListAsync(), "CategoryId", "Name", task.CategoryId);
            
            // Get priorities for dropdown
            ViewBag.Priorities = new SelectList(new[]
            {
                new { Value = 1, Text = "High" },
                new { Value = 2, Text = "Medium" },
                new { Value = 3, Text = "Low" },
            }, "Value", "Text", task.Priority);
            
            return View(task);
        }

        // POST: Tasks/Edit/5
        [HttpPost]
        [ValidateAntiForgeryToken]
        public async Task<IActionResult> Edit(int id, [Bind("TaskId,Title,Description,DueDate,Priority,CategoryId,AssignedToUserId,IsCompleted")] UserTask task)
        {
            if (id != task.TaskId)
            {
                return NotFound();
            }

            // Get the original task for fields we don't want to modify
            var originalTask = await _context.Tasks.AsNoTracking().FirstOrDefaultAsync(t => t.TaskId == id);
            if (originalTask == null)
            {
                return NotFound();
            }

            // Preserve fields that shouldn't be modified through the form
            task.CreatedOn = originalTask.CreatedOn;
            task.AssignedByUserId = originalTask.AssignedByUserId;
            task.AssignedOn = originalTask.AssignedOn;

            if (ModelState.IsValid)
            {
                try
                {
                    _context.Update(task);
                    await _context.SaveChangesAsync();
                    return RedirectToAction(nameof(Index));
                }
                catch (DbUpdateConcurrencyException)
                {
                    if (!_context.Tasks.Any(e => e.TaskId == task.TaskId))
                    {
                        return NotFound();
                    }
                    else
                    {
                        throw;
                    }
                }
            }
            
            // If validation failed, redisplay the form
            ViewBag.Categories = new SelectList(await _context.TaskCategories.OrderBy(c => c.Name).ToListAsync(), "CategoryId", "Name", task.CategoryId);
            ViewBag.Priorities = new SelectList(new[]
            {
                new { Value = 1, Text = "High" },
                new { Value = 2, Text = "Medium" },
                new { Value = 3, Text = "Low" },
            }, "Value", "Text", task.Priority);
            
            return View(task);
        }

        // GET: Tasks/Details/5
        public async Task<IActionResult> Details(int? id)
        {
            if (id == null)
            {
                return NotFound();
            }

            var currentUser = await _userManager.GetUserAsync(User);
            if (currentUser == null)
            {
                return RedirectToAction("Login", "Account");
            }

            var task = await _context.Tasks
                .Include(t => t.Category)
                .Include(t => t.AssignedToUser)
                .Include(t => t.AssignedByUser)
                .Include(t => t.TimeLogs)
                .ThenInclude(l => l.User)
                .FirstOrDefaultAsync(m => m.TaskId == id);

            if (task == null)
            {
                return NotFound();
            }

            // Check for active timers for this task and user
            var activeTimer = await _context.TaskTimeLogs
                .FirstOrDefaultAsync(l => l.TaskId == id && l.UserId == currentUser.Id && l.EndTime == null);
            
            ViewBag.HasActiveTimer = activeTimer != null && !activeTimer.IsPaused;
            ViewBag.HasPausedTimer = activeTimer != null && activeTimer.IsPaused;

            // Calculate total time spent on this task
            var totalMinutes = task.TimeLogs
                .Where(l => l.EndTime.HasValue)
                .Sum(l => l.DurationMinutes);
            
            ViewBag.TotalTimeSpent = totalMinutes;
            
            // Format as hours and minutes for display
            var hours = totalMinutes / 60;
            var minutes = totalMinutes % 60;
            ViewBag.FormattedTimeSpent = hours > 0 
                ? $"{hours} hours {minutes} minutes" 
                : $"{minutes} minutes";

            return View(task);
        }        // Helper method to check if a task exists
        private bool TaskExists(int id)
        {
            return _context.Tasks.Any(e => e.TaskId == id);
        }

