            ViewBag.Priorities = new SelectList(new[]
            {
                new { Value = 1, Text = "High" },
                new { Value = 2, Text = "Medium" },
                new { Value = 3, Text = "Low" },
            }, "Value", "Text");
            
            // Get current user
            var currentUser = await _userManager.GetUserAsync(User);
            if (currentUser == null)
            {
                return RedirectToAction("Login", "Account");
            }
            
            var userRole = (await _userManager.GetRolesAsync(currentUser)).FirstOrDefault() ?? "User";
            ViewBag.UserRole = userRole;
              // Create a list of users that can be assigned tasks
            if (userRole == "Manager" || userRole == "Lead")
            {
                // Managers and Leads can assign to any user
                var users = await _userManager.Users.OrderBy(u => u.LastName).ToListAsync();
                var userItems = new List<SelectListItem>();
                
                foreach (var u in users)
                {
                    var roleNames = await _userManager.GetRolesAsync(u);
                    var role = roleNames.FirstOrDefault() ?? "User";
                    
                    userItems.Add(new SelectListItem {
                        Value = u.Id,
                        Text = $"{u.LastName}, {u.FirstName} ({role})"
                    });
                }
                
                ViewBag.AssignableUsers = new SelectList(userItems, "Value", "Text", currentUser.Id);
            }
            else
            {
                // Regular users can only assign to themselves
                var userItems = new List<SelectListItem>
                {
                    new SelectListItem {
                        Value = currentUser.Id,
                        Text = $"{currentUser.LastName}, {currentUser.FirstName} (You)"
                    }
                };
                
                ViewBag.AssignableUsers = new SelectList(userItems, "Value", "Text", currentUser.Id);
            }
            
            // Default the assigned user to the current user
            var task = new UserTask
            {
                AssignedToUserId = currentUser.Id,
                Priority = 2 // Default to Medium priority
            };
            
            return View(task);
        }

